@model List<Northwind.Core.Data.Employee>
@{
    Layout = "~/Views/Shared/master.cshtml";
}

<div class="ui segment">
    <h3>Our employees</h3>
    <div class="ui link cards">
        @foreach (var item in Model)
        {
            <div class="card">
                <div class="image">
                    @if (item.TitleOfCourtesy == "Mrs." || item.TitleOfCourtesy == "Ms.")
                    {
                        <img src="https://semantic-ui.com/images/avatar2/large/molly.png">
                    }
                    else
                    {
                        <img src="https://semantic-ui.com/images/avatar2/large/matthew.png">
                    }
                </div>
                <div class="content">
                    <div class="header">@item.TitleOfCourtesy @item.FirstName @item.LastName</div>
                    <div class="meta">
                        <a>@item.Title</a>
                    </div>
                    <div class="description">
                        @item.Notes
                    </div>
                </div>
            </div>
        }
    </div>
</div>
